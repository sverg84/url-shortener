{
    "manifest_version": 3,
    "name": "URL Shortener",
    "version": "0.1",
    "description": "Copy a shortened version of the URL to clipboard",
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png"
    },
    "background": {
        "service-worker": "background.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "activeTab",
        "contextMenus",
        "notifications",
        "webRequest"
    ]
}