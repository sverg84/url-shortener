{
    "manifest_version": 3,
    "name": "URL Shortener",
    "version": "1.0.0",
    "description": "Copy a shortened version of the URL to clipboard",
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "service-worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "activeTab",
        "contextMenus",
        "notifications"
    ]
}